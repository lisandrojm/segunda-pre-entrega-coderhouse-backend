{{! //////////////////////////////////////////////////////////////// }}
{{!  /src/views/carts.handlebars -  HTML con sintaxis de Handlebars   }}
{{! //////////////////////////////////////////////////////////////// }}

<html>
  <head>
    <title>{{title}}</title>
    <link rel='stylesheet' href='css/{{style}}' />
    <script src='https://unpkg.com/sweetalert/dist/sweetalert.min.js'></script>
  </head>
  <body>
    <div class='container pt-3 text-center'>
      <div class='d-flex align-items-center justify-content-center'>
        <img class='pe-2' src='/img/cart.svg' alt='cart' />
        <h1 class='text-center'>Carts</h1>
      </div>
      <h3 class='text-center pb-2 pt-2'>Productos en el carrito</h3>
      <div class='text-centerl'>
        <p class='font_id'><span class='fw-bold'>Cart ID: </span> <span id='cartId'>{{cartId}}</span></p>
      </div>
      <div class='table-responsive'>
        <table class='table table-bordered table-striped'>
          <thead>
            <tr>
              <th>Carts ID</th>
            </tr>
          </thead>
          <tbody>
            {{#each carts}}
              <tr>
                <td>{{_id}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
        <table class='table table-bordered table-striped'>
          <thead>
            <tr>
              <th>Object ID</th>
              <th>Quantity</th>
              <th>Products</th>
            </tr>
          </thead>
          <tbody>
            {{#each carts}}
              {{#each this.products}}
                <tr>
                  <td>{{_id}}</td>
                  <td>{{this.quantity}}</td>
                  <td>{{this.productId}}</td>
                </tr>
              {{/each}}
            {{/each}}
          </tbody>
        </table>
      </div>
      <div class='text-center mt-2 mb-4'>
        <a class='btn btn-dark' href='http://localhost:8080/products' role='button'>Ir a Productos</a>
      </div>
    </div>
    <script src='/socket.io/socket.io.js'></script>
    <script src='/js/carts/index.js'></script>
  </body>
</html>