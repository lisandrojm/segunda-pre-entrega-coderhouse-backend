{{! //////////////////////////////////////////////////////////////// }}
{{!  /src/views/home.handlebars -  HTML con sintaxis de Handlebars   }}
{{! //////////////////////////////////////////////////////////////// }}

<html>
  <head>
    <title>{{title}}</title>
    <link rel='stylesheet' href='css/{{style}}' />
  </head>
  <body>
    <div class='container pt-3 text-center'>
      <h4 class='text-center text-danger'>Home</h4>
      <h2 class='text-center pb-2'>Lista de Productos</h2>
      <div class='table-responsive'>
        <table class='table table-bordered table-striped'>
          <thead>
            <tr>
              <th>ID</th>
              <th>Título</th>
              <th>Descripción</th>
              <th>Código</th>
              <th>Precio</th>
              <th>Stock</th>
              <th>Categoría</th>
            </tr>
          </thead>
          <tbody>
            {{#each products}}
              <tr>
                <td>{{_id}}</td>
                <td>{{title}}</td>
                <td>{{description}}</td>
                <td>{{code}}</td>
                <td>{{price}}</td>
                <td>{{stock}}</td>
                <td>{{category}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      <div class='text-center mt-2'>
        <a class='btn btn-primary' href='http://localhost:8080/realtimeproducts' role='button'>Real Time Products</a>
      </div>
    </div>
    <script src='/socket.io/socket.io.js'></script>
  </body>
</html>