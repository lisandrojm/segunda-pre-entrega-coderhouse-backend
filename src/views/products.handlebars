{{! //////////////////////////////////////////////////////////////////////////// }}
{{!  /src/views/products.handlebars -  HTML con sintaxis de Handlebars   }}
{{! //////////////////////////////////////////////////////////////////////////// }}

<html>
  <head>
    <title>{{title}}</title>
    <script src='https://unpkg.com/sweetalert/dist/sweetalert.min.js'></script>
    <link rel='stylesheet' href='css/{{style}}' />
  </head>
  <body>
    <div class='container p-3 pt-5'>
      <div class='text-center'>
        <h1>Productos</h1>
        <!-- Mostrar el cartId -->
        <div class='text-center mt-3'>
          <p class='font_id'><span class='fw-bold'>Cart ID: </span> <span id='cartId'>{{cartId}}</span></p>
          <p id='cartQuantity' class='font_id m-0'>
          </p>
          <a class='btn btn-dark mb-3 mt-2' href='http://localhost:8080/carts' role='button'>Detalle de carrito</a>
          <!-- Nuevo elemento para mostrar la cantidad -->
        </div>
      </div>
      <div class='row'>
        {{#each products}}
          <div class='col-md-4'>
            <div class='card product-card'>
              <div class='card-body'>
                <h5 class='card-title'>{{title}}</h5>
                <p class='card-text'>{{description}}</p>
                <p class='card-text'><span class='fw-bold'>Código: </span>{{code}}</p>
                <p class='card-text'><span class='fw-bold'>Precio: </span>{{price}}</p>
                <p class='card-text'><span class='fw-bold'>Stock: </span>{{stock}}</p>
                <p class='card-text'><span class='fw-bold'>Categoría: </span>{{category}}</p>
                <p class='card-text font_id'><span class='fw-bold'>Product ID: </span>{{_id}}</p>
                <button class='btn btn-primary w-100' data-productid='{{_id}}'>Agregar al carrito</button>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
      <!-- Sección de paginación -->
      <div class='row mt-4'>
        <div class='col-12'>
          <nav aria-label='Pagination'>
            <ul class='pagination justify-content-center'>
              {{#if hasPrevPage}}
                <li class='page-item'>
                  <a class='page-link' href='{{prevLink}}'>&laquo; Previous page</a>
                </li>
              {{/if}}
              <!-- Mostrar el número de página actual -->
              <li class='page-item active'>
                <span class='page-link'>Page {{currentPage}}</span>
              </li>
              {{#if hasNextPage}}
                <li class='page-item'>
                  <a class='page-link' href='{{nextLink}}'>Next page &raquo;</a>
                </li>
              {{/if}}
            </ul>
          </nav>
        </div>
      </div>
    </div>
    <script src='/socket.io/socket.io.js'></script>
    <script src='/js/products/index.js'></script>
  </body>
</html>